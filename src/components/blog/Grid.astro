---
import Item from '~/components/blog/GridItem.astro';
import type { Post } from '~/types';
import Button from '../ui/Button.astro';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<section class="flex flex-col gap-y-12 items-center justify-center">
  <div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-3 -mb-6">
    {posts.map((post) => <Item post={post} />)}
  </div>

  <Button variant="secondary" icon="tabler:arrow-right" href="#">Ver m√°s cursos</Button>
</section>
